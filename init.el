;; set directories
(when (eq system-type 'windows-nt)
  (defvar base-path "D:/emacs"))
(when (eq system-type 'darwin)
  (defvar base-path "~/.emacs.d"))

(defvar plugin-path (concat base-path "/plugins"))
(defvar config-path (concat base-path "/my-config"))
(defvar temp-path (concat base-path "/temp"))
(defvar plugin-config-path (concat config-path "/plugin-config"))
(defvar elisp-fun-path (concat config-path "/elisp-fun"))

(require 'package)
(require 'init-benchmarking) ;; Measure startup time
(setq package-archives '(("gnu" . "http://elpa.gnu.org/packages/")
			   ("marmalage" . "http://marmalade-repo.org/packages/")
